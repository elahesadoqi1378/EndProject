@using Achareh.Endpoint.MVC.Areas.Users.Models
@using Achareh.Domain.Core.Entities.Request
@model AddRequestViewModel
<!DOCTYPE html>
<html lang="en">
<meta http-equiv="content-type" content="text/html;charset=utf-8" />

<head>

	<link rel="stylesheet" href="~/UsersTemplate/css/custom/ad-post.css">
</head>

<body>

	<section class="single-banner">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="single-content">
						<h2>ثبت سفارش</h2>

					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="adpost-part">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 m-auto">
					<form asp-action="AddRequest" method="post" enctype="multipart/form-data" class="adpost-form">
						<div class="adpost-card">
							<div class="adpost-title">
								<h3>ثبت درخواست سرویس جدید </h3>
							</div>
							<div class="row">
								<div class="col-lg-12">
									<div class="form-group">
										<label asp-for="HomeServiceTitle" class="form-label">هوم سرویس</label>
										<input asp-for="HomeServiceTitle" class="form-control">
										<span asp-validation-for="HomeServiceTitle" class="text-danger"></span>
									</div>
								</div>



								<div class="col-lg-12">
									<div class="form-group">
										<label asp-for="RequestForDate" class="form-label">تاریخ</label>
										<input asp-for="RequestForDate" class="form-control">
										<span asp-validation-for="RequestForDate" class="text-danger"></span>
									</div>
								</div>

								<div class="col-lg-12">
									<div class="form-group">
										<label asp-for="RequestForTime" class="form-label">ساعت</label>
										<input asp-for="RequestForTime" type="time" class="form-control">
										<span asp-validation-for="RequestForTime" class="text-danger"></span>
									</div>
								</div>
							</div>
							<div class="col-lg-12">
								<label class="form-label">آپلود تصویر</label>
								<input type="file" name="ImageFiles" class="form-control" asp-for="ImageFiles" multiple />
							</div>

							<div class="col-lg-12">
								<label asp-for="Description" class="form-label">توضیحات</label>
								<textarea asp-for="Description" class="form-control" rows="3"></textarea>
								<span asp-validation-for="Description" class="text-danger"></span>
							</div>
						</div>

						<input type="hidden" asp-for="HomeServiceId" />
						<div class="adpost-card pb-2">

							<div class="form-group text-right">
								<button  type="submit" class="btn btn-inline">
									<i class="fas fa-check-circle"  ></i><span>ثبت</span>
								</button>
							</div>
						</div>


					</form>

				</div>



			</div>
		</div>

	</section>


</body>

</html>
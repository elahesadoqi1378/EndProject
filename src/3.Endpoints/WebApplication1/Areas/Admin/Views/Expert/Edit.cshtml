@model EditUserViewModel

<section class="content user-edit">
    <div class="body_scroll">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>ویرایش کاربر</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> آئرو</a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0);">مدیریت کاربران</a></li>
                        <li class="breadcrumb-item active">ویرایش کاربر</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-6 col-md-8 col-sm-12 mx-auto">
                    <div class="card">
                        <div class="body">
                            <form asp-action="Edit" method="post">
                                <input type="hidden" asp-for="Id" />

                                <div class="form-group">
                                    <label asp-for="Email" class="form-label">ایمیل</label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="ایمیل خود را وارد کنید" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="FirstName" class="form-label">نام</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="نام خود را وارد کنید" required />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="LastName" class="form-label">نام خانوادگی</label>
                                    <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی خود را وارد کنید" required />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">تصویر فعلی</label>
                                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                                    {
                                        <div>
                                            <img src="@Model.ImagePath" class="img-thumbnail" style="max-width: 150px;" />
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">تصویری وجود ندارد.</p>
                                    }
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">آپلود تصویر جدید (اختیاری)</label>
                                    <input type="file" asp-for="ImageFile" class="form-control" />
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>


                                <div class="d-flex justify-content-between">
                                    <button type="submit" class="btn btn-success">
                                        <i class="zmdi zmdi-check"></i> ذخیره تغییرات
                                    </button>
                                    <a asp-action="ExpertIndex" class="btn btn-secondary">
                                        <i class="zmdi zmdi-arrow-left"></i> بازگشت
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

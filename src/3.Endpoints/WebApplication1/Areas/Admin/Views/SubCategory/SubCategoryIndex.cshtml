@model List<Achareh.Domain.Core.Entities.Request.SubCategory>

@{
    ViewData["Title"] = "مدیریت زیردسته‌ها";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">مدیریت زیردسته‌ها</h2>
    <a asp-action="Create" class="btn btn-success mb-3">افزودن زیردسته جدید</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>شناسه</th>
                <th>نام زیردسته</th>
                <th>دسته‌بندی</th>
                <th>تصویر</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subCategory in Model)
            {
                <tr>
                    <td>@subCategory.Id</td>
                    <td>@subCategory.Title</td>
                    <td>@subCategory.Category.Title]</td>
                    <td>
                        @if (!string.IsNullOrEmpty(subCategory.ImagePath))
                        {
                            <img src="@subCategory.ImagePath" alt="تصویر" width="100" height="80" class="rounded">
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@subCategory.Id" class="btn btn-primary btn-sm">ویرایش</a>
                        <a asp-action="Delete" asp-route-id="@subCategory.Id" class="btn btn-danger btn-sm">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

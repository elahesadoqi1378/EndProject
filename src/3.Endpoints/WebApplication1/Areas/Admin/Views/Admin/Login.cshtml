@model AdminLoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود ادمین</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            direction: rtl;
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            font-family: 'Tajawal', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: #ffffff;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.1);
            padding: 40px;
            border-radius: 20px;
            text-align: center;
            box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.5);
            max-width: 420px;
            width: 100%;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .admin-icon {
            font-size: 90px;
            color: #00c6ff;
            margin-bottom: 20px;
            animation: pulse 1.5s infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }
        }

        .form-control {
            border-radius: 30px;
            padding: 15px;
            font-size: 1.1rem;
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        .btn-login {
            background: linear-gradient(45deg, #00c6ff, #0072ff);
            border: none;
            color: white;
            padding: 15px;
            border-radius: 30px;
            font-size: 1.2rem;
            width: 100%;
            cursor: pointer;
        }

        .alert {
            font-size: 1rem;
            text-align: center;
            font-weight: bold;
            color: #e74c3c;
            background-color: rgba(231, 76, 60, 0.1);
            border: 1px solid #e74c3c;
            padding: 10px;
            margin-top: 20px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <i class="fas fa-user-shield admin-icon"></i>
        <h2>ورود ادمین</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <form asp-area="Admin" asp-controller="Admin" asp-action="Login" method="post">
            <div class="mb-4">
                <input asp-for="Email" class="form-control" placeholder="ایمیل خود را وارد کنید">
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
            </div>
            <div class="mb-4">
                <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور">
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
            </div>
            <button type="submit" class="btn btn-login">ورود</button>
        </form>
    </div>
</body>
</html>
